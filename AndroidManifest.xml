<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="se.sandos.android.delayed" android:versionCode="1"
	android:versionName="0.1">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".StationListActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".StationListActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="se.sandos.android.delayed.StationList"/>
			</intent-filter>
		</activity>

		<activity android:name="StationActivity">
			<intent-filter>
				<action android:name="se.sandos.android.delayed.Station"></action>
			</intent-filter>
		</activity>
		<activity android:name="se.sandos.android.delayed.prefs.PreferencesActivity">
			<intent-filter>
				<action android:name="se.sandos.android.delayed.Prefs"></action>
			</intent-filter>
		</activity>
		<receiver android:name="se.sandos.android.delayed.widget.DelayedAppWidgetProvider" android:label="Delayed">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider" android:resource="@xml/appwidget" />
		</receiver>
	</application>
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-sdk android:minSdkVersion="3"/>
</manifest> 